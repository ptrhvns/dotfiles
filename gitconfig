[alias]
	l = "log --color --graph --pretty=format:'%C(yellow)%h%Creset %s %C(bold green)%ar%Creset %C(bold blue)%an%Creset%C(bold red)%d%Creset '"
	ll = "log --color --stat --decorate --pretty=medium"
	lll = "log --color --stat --decorate --pretty=medium --patch --minimal"
[branch]
	sort = -committerdate
[color]
	ui = auto
[commit]
	verbose = true
[core]
	autocrlf = input
	edit = nvim
[diff]
	algorithm = histogram
	colorMoved = plain
	renames = true
	tool = nvim
[difftool]
	prompt = false
[difftool "nvim"]
	cmd = nvim -d $LOCAL $REMOTE
[init]
	defaultBranch = main
[merge]
	conflictstyle = zdiff3
	tool = nvim
[mergetool]
	keepBackup = false
	prompt = true
[mergetool "nvim"]
	cmd = nvim -d -c 'wincmd w' -c 'wincmd J' $LOCAL $MERGED $BASE $REMOTE
[push]
	autoSetupRemote = true
	followTags = true
[rerere]
	autoupdate = true
	enabled = true
[tag]
	sort = version:refname
[user]
	email = peter.havens@gmail.com
	name = Peter Havens
