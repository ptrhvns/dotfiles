#!/usr/bin/env bash

set -Eeuxo pipefail

rm -f ~/.bash_profile
rm -f ~/.bashrc
ln -s bashrc ~/.bashrc
rm -f ~/.ctags
ln -s ctags ~/.ctags
rm -f ~/.editc
ln editrc ~/.editrc
rm -f ~/.gitconfig
ln -s gitconfig ~/.gitconfig
rm -f ~/.gitignore
ln -s gitignore ~/.gitignore
rm -f ~/.inputrc
ln -s inputrc ~/.inputrc
rm -f ~/.nvim
ln -s nvim ~/.nvim
rm -f ~/.tmux.conf
ln -s tmux.conf ~/.tmux.conf
rm -f ~/.vimrc
ln -s vimrc ~/.vimrc
